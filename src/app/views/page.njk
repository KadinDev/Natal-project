{% extends 'pagesconfig.njk' %}

{% block titlePage %} 
    <title> Natal Solid√°rio </title> 
{% endblock %}

{% block content %}
    <div class="box-galery">

        <div class="image">
            <img src="{{ page.imgPrimaria }}" alt="">
            <p> {{ page.titleImgPrimario }} </p>
        </div>

        <div class="galery-right">
            {% for img in page.img %}
                <div>
                    <img src="{{ img.img }}" alt="imagem">
                    <p> {{ img.title }} </p>
                </div>
            {% endfor %}
        </div>

    </div>

    <div class="inspiration">
        <p> {{ page.p }} </p>
        <h1> {{ page.h1 }} </h1>
        <iframe width="560" height="315" src="{{ page.srcVideo }}" frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen></iframe>

    </div>


    <section class="cards">
        {% for card in page.cards %}
            <div class="card">
                <img src="{{ card.img }}" alt="">
                <span> {{ card.title }} </span>
            </div>
        {% endfor %}
    </section>
{% endblock content %}
    



    